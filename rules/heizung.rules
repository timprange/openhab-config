val heizungSollSuffix = "_Soll"
val proxySuffix = "_Proxy"
val heizungSollProxySuffix = "_Soll"+proxySuffix
val heizungModeSuffix = "_Mode"
val heizungModeGeneralSuffix = heizungModeSuffix+"_General"
val heizungIstSuffix = "_Ist"
val heizungSuffix = "_Heizung"
val fensterSuffix = "_Fenster"


rule "Heizung_Proxy_Changed"
when
    Member of Heizung_Soll_Proxy changed
then
    val heizungProxy = triggeringItem
    logInfo("Heizung.rules","TriggeringItem: "+heizungProxy.name )
    val heizungString = heizungProxy.name.substringBefore(heizungSollProxySuffix)
    val heizung = Heizung_Soll.members.findFirst[h | h.name == heizungString+heizungSollSuffix]
    val heizungMode = Heizung_Mode_General.members.findFirst[h | h.name == heizungString+heizungModeGeneralSuffix]
    if(heizungProxy.state as Number == 99){
        heizungMode.sendCommand(0)
    }
    else{
        heizung.sendCommand(heizungProxy.state as Number)
    }
end

